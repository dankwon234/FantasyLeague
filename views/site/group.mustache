<!doctype html>
<html lang="en">
    <head>
	    {{>head}}
		
    </head>
	
    <body ng-app="TheVig" ng-controller="GroupController" ng-init="init()">
		{{>login}}

        <!-- Invite Modal -->
        <div class="modal fade" id="inviteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div style="width:35%;min-width:360px;margin-left:auto;margin-right:auto" class="modal-dialog">
            <div class="modal-content">
              <button type="button" class="close" data-dismiss="modal"><span style="margin-right:5px;" aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <div style="background:rgba(249, 249, 249, 0.96);border:1px solid #ddd;padding:32px 16px 0px 16px;min-height:300px;text-align:center">
                    <img style="width:60%" src="/site/img/logo-dark.png" /><br /><br />
                    <hr />
                    <h3 style="margin-top:30px;text-align:center">Invite Member</h3>
                    <div class="contact-form" style="margin-top:40px;width:90%;margin-left:auto;margin-right:auto">
                        <input style="background:#fff" ng-model="invitee.name" type="text" placeholder="Name" class="form-control">                    
                        <input style="background:#fff" ng-model="invitee.email" type="text" placeholder="Email or Phone Number" class="form-control">
                    </div>
                    <div class="row" style="background:#fff;border-top:1px solid #ddd;margin-top:36px;padding-top:24px">
                          <button style="background:#fff" ng-click="invite()" type="submit" class="btn btn-large">Invite</button>
                    </div>
                </div>
                
            </div>
          </div>
        </div>        

        <!-- Create Matchup Modal -->
        <div class="modal fade" id="matchupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div style="width:35%;min-width:360px;margin-left:auto;margin-right:auto" class="modal-dialog">
            <div class="modal-content">
              <button type="button" class="close" data-dismiss="modal"><span style="margin-right:5px;" aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <div style="background:rgba(249, 249, 249, 0.96);border:1px solid #ddd;padding:32px 16px 0px 16px;min-height:300px;text-align:center">
                    <img style="width:60%" src="/site/img/logo-dark.png" /><br /><br />
                    <hr />
                    <h4 style="margin-top:10px;text-align:center">Create Contest</h4>
                    <div class="row" style="margin-top:20px;width:90%;margin-left:auto;margin-right:auto;text-align:left">
                        <div class="col-md-3">
                          <h5 style="margin-bottom:0px">Entry</h5>
                        </div>
                        <div class="col-md-3">
                          <input ng-change="updateContestDescription()" ng-model="contest.buyIn" value="0" style="margin-right:8px" type="radio" name="buyIn"> Free
                        </div>
                        <div class="col-md-3">
                          <input ng-change="updateContestDescription()" ng-model="contest.buyIn" value="5" style="margin-right:8px" type="radio" name="buyIn"> $5
                        </div>
                        <div class="col-md-3">
                          <input ng-change="updateContestDescription()" ng-model="contest.buyIn" value="20" style="margin-right:8px" type="radio" name="buyIn"> $20
                        </div>
                    </div>

                    <br />
                    <div class="row" style="text-align:left">
                        <div class="col-md-6">
                            <h5 style="margin-bottom:0px">Minimum Entries:</h5>
                        </div>

                        <div class="col-md-6">
                            <select ng-model="contest.minEntries" ng-change="updateContestDescription()" class="form-control">
                                <option value="2">2</option>
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>
                        </div>
                    </div>



                    <div style="background:#f1f9f5;border:1px solid #ddd;min-height:64px;padding:16px">
                        <strong><% contestDescription %></strong> 
                    </div>


                    <div class="row" style="background:#fff;border-top:1px solid #ddd;margin-top:36px;padding-top:24px">
                        <button ng-click="createContest()" style="background:#fff" type="submit" class="btn btn-large">Create</button>
                    </div>
                </div>
                
            </div>
          </div>
        </div>        
		
	    {{>nav}}
		
		
        <div class="main-container">
		
		  <section class="page-title page-title-4 image-bg overlay parallax">
                <div class="background-image-holder fadeIn" style="transform: translate3d(0px, 0px, 0px); top:0px; background: url('/site/img/programming.jpg');">
                    <img alt="Background Image" class="background-image" src="/site/img/computer.jpg" style="display: none;">
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="uppercase mb0">Group</h3>
                        </div>
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </section>

            <section style="border-top:1px solid #ddd;padding-top:0px;padding-bottom:0px">
                <div class="row-fluid">
                    <div class="col-md-3 hidden-xs bg-secondary" style="border-right:1px solid #ddd;padding:48px 24px 0px 48px;min-height:2100px">
                            <div class="widget">
                                <h6 class="title">Workshops</h6>
                                <hr>
                                <ul class="link-list recent-posts">
                                    <li><a ng-click="currentSection = 'matchups'" href="">Matchups</a></li>
                                    <li><a ng-click="currentSection = 'members'" href="">Members</a></li>
                                    <li><a ng-click="currentSection = 'roster'" href="">Roster</a></li>
                                    
                                </ul>
                            </div>
                            <!--end of widget-->

                    </div>

                    <div class="col-md-9 mb-xs-24">
                            <div ng-show="currentSection=='matchups'" class="post-snippet mb64" style="padding:48px">
                                <h4>Matchups</h4>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="tabbed-content text-tabs">
                                            <ul class="tabs halves mb64 mb-xs-24">
                                                <li class="active">
                                                    <div class="tab-title"><span>Current</span></div>
                                                    
                                                    <div class="tab-content text-left">
                                                        <table class="table table-striped">
                                                            <thead>
                                                              <tr>
                                                                <td>Week</td><td>Status</td><td>Num Entries</td>
                                                              </tr>
                                                            </thead>

                                                            <tbody>
                                                              <tr ng-repeat="contest in group.contests track by $index">
                                                                <td>Week <% contest.week %></td>
                                                                <td><% contest.state %></td>
                                                                <td><% contest.entries.length %></td>
                                                              </tr>
                                                            </tbody>
                                                        </table>

                                                        <button style="background:#fff" data-toggle="modal" data-target="#matchupModal" type="submit" class="btn btn-large">Create Contest</button>
                                                        
                                                    </div><!--end of tab content-->
                                                </li>
                                                <li>
                                                    <div class="tab-title"><span>History</span></div>
                                                    <div class="tab-content text-left">
                                                        <table class="table table-striped">
                                                            <thead>
                                                              <tr>
                                                                <td>Name</td><td>Rank</td>
                                                              </tr>
                                                            </thead>

                                                            <tbody>
                                                              <tr>
                                                                <td>Group 1</td><td>Open</td><td>Free</td>
                                                              </tr>
                                                            </tbody>
                                                        </table>
                                                        
                                                            
                                                    </div><!--end of tab content-->
                                                </li>
                                                <li>
                                                </li>
                                            </ul>
                                        </div>
                                        <!--end of button tabs-->
                                    </div>
                                </div>


                            </div>

                            <div ng-show="currentSection=='members'" class="post-snippet mb64" style="padding:48px">
                                <h4>Members</h4>


                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="tabbed-content text-tabs">
                                            <ul class="tabs halves mb64 mb-xs-24">
                                                <li class="active">
                                                    <div class="tab-title"><span>Current</span></div>
                                                    
                                                    <div class="tab-content text-left">
                                                        <table class="table table-striped">
                                                            <thead>
                                                              <tr>
                                                                <td>Name</td><td>Value</td>
                                                              </tr>
                                                            </thead>

                                                            <tbody>
                                                              <tr ng-repeat="member in group.profiles track by $index">
                                                                <td><% member.fullName %></td><td>10 members</td>
                                                              </tr>
                                                            </tbody>
                                                        </table>
                                                        
                                                    </div><!--end of tab content-->
                                                </li>
                                                <li>
                                                    <div class="tab-title"><span>Invited</span></div>
                                                    <div class="tab-content text-left">
                                                        <table class="table table-striped">
                                                            <thead>
                                                              <tr>
                                                                <td>Name</td><td>Rank</td>
                                                              </tr>
                                                            </thead>

                                                            <tbody>
                                                              <tr ng-repeat="invitee in group.invited track by $index">
                                                                <td><% invitee.name %></td><td>10 members</td>
                                                              </tr>
                                                            </tbody>
                                                        </table>
                                                        
                                                        <button id="inviteButton" style="background:#fff" data-toggle="modal" data-target="#inviteModal" type="submit" class="btn btn-large">Invite Member</button>
                                                            
                                                    </div><!--end of tab content-->
                                                </li>
                                                <li>
                                                </li>
                                            </ul>
                                        </div>
                                        <!--end of button tabs-->
                                    </div>
                                </div>




                            </div>
                            <!--end of post snippet-->


                            <div ng-show="currentSection=='roster'" class="post-snippet mb64" style="padding:48px">
                                <h4>Roster</h4>

                                <table class="table table-striped">
                                    <thead>
                                      <tr>
                                        <td>Name</td><td>Rank</td>
                                      </tr>
                                    </thead>

                                    <tbody>
                                      <tr ng-repeat="playerId in group.rosters[profile.id].roster track by $index">
                                        <td><% generalService.capitalize(players[playerId].fullName) %></td>
                                        <td>$<% generalService.formattedNumber(players[playerId].value) %></td>
                                      </tr>
                                    </tbody>
                                </table>
                                <a href="/site/nflplayers?group=<% group.id %>" style="background:#fff" type="submit" class="btn btn-large">Manage Roster</a>

                            </div>
                            <!--end of post snippet-->


                    </div>


                </div>

            </section>

					
			
			{{>footer}}


        </div>
		
		{{>scripts}}
		
    </body>
</html>